---
import SiteLayout from "../layouts/SiteLayout.astro";
const pathname = Astro.url.pathname;
---
<SiteLayout title="Features – MySite" pathname={pathname}>
  <section>
    <h1 class="mb-4 text-2xl font-bold">Features</h1>
    <p class="text-gray-700 mb-6">SSG + Tailwind + 左サイド/トップヘッダー。</p>
    <ul class="grid grid-cols-1 gap-4 md:grid-cols-2">
      {["Fast", "Accessible", "Responsive", "Typed"].map((x) => <li class="rounded-xl border bg-white p-4 shadow-sm">{x}</li>)}
    </ul>
  </section>
</SiteLayout>

