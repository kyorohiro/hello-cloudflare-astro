---
import "../styles/global.css";

interface Props {
  title: string;
}
const { title }:Props = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>

